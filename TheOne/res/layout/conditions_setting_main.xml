<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:layout_marginTop="8dip" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="@string/start_screening" />

            <com.theone.sns.util.uiwidget.swithbutton.SwitchButton
                android:id="@+id/row_friends_verify_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="56dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/look"
                    style="@style/BigTextSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="@string/look_avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/look"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="2dip"
                    android:text="@string/look_avatar1" />
            </LinearLayout>

            <com.theone.sns.util.uiwidget.swithbutton.SwitchButton
                android:id="@+id/avatar_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:text="@string/role" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="15dip" >

                <LinearLayout
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/t_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_interest_btn"
                        android:gravity="center"
                        android:padding="8dip"
                        android:text="T" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/p_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_interest_btn"
                        android:gravity="center"
                        android:padding="8dip"
                        android:text="P" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/h_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_interest_btn"
                        android:gravity="center"
                        android:padding="8dip"
                        android:text="H" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/unknow_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_interest_btn"
                        android:gravity="center"
                        android:padding="8dip"
                        android:text="@string/role_unknow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <RelativeLayout
            android:id="@+id/city_view"
            android:layout_width="fill_parent"
            android:layout_height="46dip" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="@string/area" />

            <TextView
                android:id="@+id/register_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:drawableRight="@drawable/iphone_submenu_normal"
                android:text="北京"
                android:textSize="16dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <RelativeLayout
            android:id="@+id/age_view"
            android:layout_width="fill_parent"
            android:layout_height="46dip" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="@string/age" />

            <TextView
                android:id="@+id/age_rang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:drawableRight="@drawable/iphone_submenu_normal"
                android:text="20岁-28岁"
                android:textSize="16dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <RelativeLayout
            android:id="@+id/height_view"
            android:layout_width="fill_parent"
            android:layout_height="46dip" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="@string/height" />

            <TextView
                android:id="@+id/height_rang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:drawableRight="@drawable/iphone_submenu_normal"
                android:text="160cm-170cm"
                android:textSize="16dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <RelativeLayout
            android:id="@+id/intent_rela"
            android:layout_width="fill_parent"
            android:layout_height="46dip" >

            <TextView
                style="@style/BigTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="@string/interest" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/iphone_submenu_normal_shang" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image"
                android:text="展开"
                android:textSize="16dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/iphone_line" />

        <LinearLayout
            android:id="@+id/grid_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:visibility="gone" >

            <GridView
                android:id="@+id/interests"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="20dip"
                android:listSelector="@null"
                android:numColumns="3"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="15dip" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>