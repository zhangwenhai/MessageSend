<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nihao"
            android:gravity="center_vertical"
            android:background="@drawable/tag_text_bg_right"
            android:layout_centerVertical="true"
            android:textColor="#ffffffff"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"
            android:textSize="10dip"
            android:layout_marginRight="-7dp" />

        <com.theone.sns.ui.publish.AnimatedTagLayout
            android:id="@+id/animated_point_layout"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_toRightOf="@id/tag_text"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/animated_circle_button_black"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/brand_tag_point_black_bg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:layout_margin="7dp"
                android:id="@+id/animated_circle_button_white"
                android:layout_width="13dip"
                android:layout_height="13dip"
                android:src="@drawable/mark_user_icon"
                android:layout_centerInParent="true" />
        </com.theone.sns.ui.publish.AnimatedTagLayout>

        <TextView
            android:id="@+id/tag_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nihao"
            android:gravity="center_vertical"
            android:background="@drawable/tag_text_bg_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/animated_point_layout"
            android:textColor="#ffffffff"
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:textSize="10dip"
            android:layout_marginLeft="-7dp" />
    </RelativeLayout>
</RelativeLayout>